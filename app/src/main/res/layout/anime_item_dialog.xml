<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:app="http://schemas.android.com/apk/res-auto">


            <TextView
                android:id="@+id/anime_item_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="39sp"
                android:text="TitleHere"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="180dp"
                android:layout_height="240sp"
                android:id="@+id/anime_item_dialog_pic"
                android:paddingLeft="40sp"
                app:placeholderImage="@drawable/live_indicator_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/anime_item_dialog_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UpdateTime"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/anime_item_dialog_updated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4sp"
                    android:text="Updated Count"
                    android:textColor="#000000" />
            </LinearLayout>

            <TextView
                android:id="@+id/anime_item_dialog_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4sp"
                android:text="STATUS" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
