<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="3sp">

    <ImageView
        android:layout_width="147dp"
        android:layout_height="105dp"
        android:id="@+id/rank_img"
        android:src="@mipmap/bilirank"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="4sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rank_title"
            android:text="Title"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="69dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UP主:"
                android:textStyle="bold"
                android:id="@+id/author_indicator"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="UPInfo"
                android:id="@+id/rank_up"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/author_indicator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Av号:"
                android:id="@+id/av_indicator"
                android:layout_below="@+id/author_indicator"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="AVNum"
                android:id="@+id/rank_av_num"
                android:layout_alignTop="@+id/av_indicator"
                android:layout_toEndOf="@+id/av_indicator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="类型:"
                android:id="@+id/cpright_indicator"
                android:layout_below="@+id/av_indicator"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="分类:"
                android:id="@+id/type_indicator"
                android:layout_below="@+id/cpright_indicator"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Type"
                android:id="@+id/rank_type"
                android:layout_below="@+id/av_indicator"
                android:layout_toEndOf="@+id/av_indicator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Copyright"
                android:id="@+id/rank_copyright"
                android:layout_alignTop="@+id/type_indicator"
                android:layout_toEndOf="@+id/type_indicator" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
